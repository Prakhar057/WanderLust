<% layout("./layouts/boilerplate.ejs") %>
<div class="form-container offset-4">
<div class="card shadow-lg p-4 rounded-4" style="width: 380px">
  <h3 class="text-center mb-3 fw-semibold">Login to WanderLust</h3>
  <p class="text-muted text-center mb-4">
    Welcome back! Please enter your details.
  </p>

  <form action="/login" novalidate class="needs-validation"   method="POST">
    <div class="mb-3">
      <label for="username" class="form-label fw-semibold">Username</label>
      <input
        type="name"
        class="form-control"
        id="username"
        name="username"
        placeholder="Enter your username"
        required
      />
    </div>

    <div class="mb-3">
      <label for="password" class="form-label fw-semibold">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter your password"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary w-100 fw-semibold">
      Login
    </button>
  </form>

  <div class="text-center mt-3">
    <small class="text-muted"
      >Don't have an account?
      <a href="/signup" class="text-decoration-none fw-semibold">Sign up</a>
    </small>
  </div>
</div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #f8f9fa 0%, #e8f0ff 100%);
  }
  .card {
    border: none;
  }
  .form-control:focus {
    box-shadow: 0 0 6px rgba(13, 110, 253, 0.25);
    border-color: #0d6efd;
  }
  


</style>
