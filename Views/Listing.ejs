<%layout("./layouts/boilerplate.ejs")%>

<div class="showBody">
  <br />
  <h1><%= listing.title %></h1>

  <div class="card showCard">
    <img
      src="<%= listing.image %>"
      class="card-img-top showImage"
      alt="<%= listing.title %>"
    />
    <div class="card-body">
      <p class="card-text showText"></p>
      <h2>Location: <%=listing.location%></h2>
      <h2>Country: <%=listing.country%></h2>
      <h3>Price: â‚¹<%=listing.price.toLocaleString("en-IN") %></h3>
    </div>
  </div>

  <form class="showbtn edit" action="/listings/edit/<%=listing._id%>">
    <button class="btn btn-dark">Edit</button>
  </form>

  <form
    class="showbtn delete"
    method="post"
    action="/listings/delete/<%=listing._id%>?_method=delete"
  >
    <button class="btn btn-dark">Delete</button>
  </form>
  <hr />
  <div>
    <h3>Leave A review</h3>
    <form
      action="/listings/<%=listing.id%>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3 mt-3">
        <label class="form-label" for="comment">Comments</label>
        <textarea
          class="form-control"
          name="review[comment]"
          id="review"
          required
        ></textarea>
        <div class="invalid-feedback">Please Add a Comment</div>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>
    <hr />
    <div class="container my-4">
      <h4 class="mb-4 border-bottom pb-2">What people are saying</h4>
    
      <% if (listing.reviews.length > 0) { %>
        <div class="list-group">
          <% listing.reviews.forEach(review => { %>
            <div class="list-group-item list-group-item-action mb-3 rounded shadow-sm">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div
                    class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center me-2"
                    style="width:35px; height:35px;"
                  >
                    <i class="bi bi-person-fill"></i>
                  </div>
                  <h6 class="mb-0 fw-bold">Anonymous User</h6>
                </div>
    
                <div class="text-warning">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <% if (i <= review.rating) { %>
                      <i class="bi bi-star-fill"></i>
                    <% } else { %>
                      <i class="bi bi-star"></i>
                    <% } %>
                  <% } %>
                </div>
              </div>
    
              <p class="mt-2 mb-1 text-muted">
                <%= review.comment || "No comment provided." %>
              </p>
    
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-secondary">Reviewed recently</small>
    
                
                <form
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this review?');"
                >
                  <button type="submit" class="btn btn-sm ">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="alert alert-secondary mt-3" role="alert">
          No reviews yet. Be the first to leave one!
        </div>
      <% } %>
    </div>
    
  </div>
</div>
